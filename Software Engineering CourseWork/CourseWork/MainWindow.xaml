        <Button x:Name="btn_previous" Content="Previous" HorizontalAlignment="Left" Margin="145,266,0,0" VerticalAlignment="Top" Width="75" Click="btn_process_Click"/>
        <Button x:Name="btn_next" Content="Next" HorizontalAlignment="Left" Margin="299,266,0,0" VerticalAlignment="Top" Width="75" Click="btn_process_Click"/>

